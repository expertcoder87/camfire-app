<div style="margin: 2%;">
{{#if downloading}}
    <center>{{paper-progress-circular diameter=150}}</center>
{{else}}
  <div>
    <div class="layout-row flex">
      <div class="flex-80 sc-title"> MARKETPLACE </div>
    </div>
    {{#if model.length}}
      {{#paper-list}}
        {{#each model as |game|}}
          {{#paper-item class="coolPaperItem"}}
            <div class="layout-column flex">
              <div class="flex-50">
                <div class="layout-row flex">
                    <h3 class="flex-90">{{game.worldName}}</h3>
                      {{#paper-button primary=true onClick=(action "downloadGame" game)}} Download {{/paper-button}}
                </div>
              </div>
              <div class="flex-50">
                <p>
                  {{game.description}}
                </p>
              </div>
            </div>
          {{/paper-item}}
        {{/each}}
      {{/paper-list}}
    {{else}}
      {{#paper-card as |card|}}
        {{#card.content}}
          <p>No game is available for you to download.</p>
        {{/card.content}}
      {{/paper-card}}
    {{/if}}
  </div>
{{/if}}
</div>
