<div style="margin: 2%;">
  <div class="layout-row flex">
    <div class= "flex-80 sc-title"> STORIES </div>
  </div>
  {{#paper-card as |card|}}
        {{#card.title as |title|}}
          {{#title.text as |text|}}
            <div class="layout-row flex">
              <div class="flex-85">
                {{#text.headline}}<p>{{#paper-button primary=true onClick=(action "goBack")}} {{story.title}} {{/paper-button}} > {{#paper-button}}  Scenes{{/paper-button}} </p>{{/text.headline}}
              </div>
              <div class="flex-15">
                <p>{{#paper-button primary=true onClick=(action "addScene" story)}} Add New Scenes {{/paper-button}}</p>
              </div>
            </div>
          {{/title.text}}
          {{/card.title}}
          {{#card.content}}
            <div class="layout-column flex">
              <div class="flex-80">

                {{#paper-list}}
                  {{#each scenes as |scene|}}
                    {{#paper-item onClick=(action "sceneDetails" scene.id) class="coolPaperItem"}}
                      <div class="layout-column flex">
                        <div class="flex-50">
                          <div class="layout-row flex">
                              <h3 class="flex-90">{{scene.name}}</h3>
                          </div>
                        </div>
                        <div class="flex-30 flexClass">
                          <div class="flex-50">
                            <p>
                              {{scene.secretStoryDetails}}
                            </p>
                          </div>
                          <img class="sceneImg" src={{scene.imageUrl}}/>
                      </div>

                      </div>
                    {{/paper-item}}
                  {{/each}}
                {{/paper-list}}

              </div>
            </div>
        {{/card.content}}
      {{/paper-card}}
</div>
