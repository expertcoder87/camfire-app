<div style="margin: 2%;">
    <div class="layout-row flex">
      <div class="flex-80 sc-title margin-30"> STORIES </div>
    </div>
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          <div class="layout-row flex">
            <div class="flex-90">
              {{#text.headline}}<p>{{model.title}}</p>{{/text.headline}}
            </div>
            <div class="flex-10">
              {{#paper-button primary=true onClick=(action "openScenes" model) class='pull-right'}} <p>Scenes</p> {{/paper-button}}
            </div>
          </div>
        {{/title.text}}
      {{/card.title}}
      {{paper-divider}}

      {{#card.content}}
        <div class="layout-column flex">

          <div class="flex-10">
            <div class="layout-row flex">
              <p class="flex-20"> Description: </p>
              {{textarea class="flex-80 textAreaWidth" rows="3" value=model.publicDescription}}
            </div>
          </div>

          <div class="flex-10">
            <div class="layout-row flex">
              <p class="flex-20"> Secret GM Overview: </p>
              {{textarea class="flex-80 textAreaWidth" rows="5" value=model.secretGmOverview}}
            </div>
          </div>


        </div>
      {{/card.content}}
      {{#card.actions }}
        {{#if (eq this.session.user.roleType "ADMIN")}}
          {{#paper-button primary=true onClick=(action "askDelete")}}Delete{{/paper-button}}
        {{/if}}  
        {{#paper-button primary=true onClick=(action "goBack")}}Cancel{{/paper-button}}
        {{#paper-button primary=true onClick=(action "saveStory")}}Save{{/paper-button}}
      {{/card.actions}}
    {{/paper-card}}
</div>

{{#if deleteDialog}}
  {{partial "delete-dialog"}}
{{/if}}
