  <div class="layout-row flex">
    <div class= "flex-80 sc-title"> STORIES </div>
    {{#paper-button primary=true class="flex-20" onClick=(action "createStory")}} Create Story {{/paper-button}}
  </div>
  {{#paper-list}}
    {{#each model as |story|}}
      {{#paper-item onClick=(action "openStory" story) class="coolPaperItem"}}
        <div class="layout-column flex">
          <div class="flex-50">
            <div class="layout-row flex">
                <h3 class="flex-90">{{story.title}}</h3>
            </div>
          </div>
          <div class="flex-50">
            <p>
              {{story.publicDescription}}
            </p>
          </div>
        </div>


      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
