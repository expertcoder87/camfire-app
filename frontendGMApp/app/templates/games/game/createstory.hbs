<div style="margin: 5%;">
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#if model.name}}
            {{#text.headline}}{{model.title}}{{/text.headline}}
          {{else}}
            {{#text.headline}}Create Your Game's Story{{/text.headline}}
          {{/if}}
        {{/title.text}}
      {{/card.title}}
      {{paper-divider}}
      {{#card.content}}
        <div class="layout-column flex">
          <div class="flex-10">
            <div class="layout-row flex">
              <p class="flex-20"> Title: </p>
              {{input class="flex-40 textAreaWidth" value=model.title}}
            </div>
          </div>
          <div class="flex-10">
            <div class="layout-row flex">
              <p class="flex-20"> Description: </p>
              {{textarea class="flex-60 textAreaWidth" rows="3" value=model.publicDescription}}
            </div>
          </div>

          <div class="flex-10">
            <div class="layout-row flex">
              <p class="flex-20"> Secret GM Overview: </p>
              {{textarea class="flex-60 textAreaWidth" rows="5" value=model.secretGmOverview}}
            </div>
          </div>

        </div>
      {{/card.content}}
      {{#card.actions }}
        {{#paper-button primary=true onClick=(action 'goBack')}}Cancel{{/paper-button}}
        {{#paper-button primary=true onClick=(action 'saveRecord')}}Save{{/paper-button}}
      {{/card.actions}}
    {{/paper-card}}
</div>
